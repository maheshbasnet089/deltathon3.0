                .bloodBank-img-wrap{
                    height: 70px;
                    width: 70px;
                    background-color: #0A5F98;
                    color: white;
                    text-align: center;
                }
                .css-display{
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
